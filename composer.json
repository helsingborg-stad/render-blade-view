{
    "name": "helsingborg-stad/render-blade-view",
    "description": "Functionality for rendering Blade components.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html .coverage/html --coverage-clover .coverage/clover.xml",
        "lint": "vendor/bin/phpcs",
        "lint:fix": "vendor/bin/phpcbf"
    },
    "autoload": {
        "psr-4": {
            "HelsingborgStad\\RenderBladeView\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ComponentLibrary\\": "vendor/helsingborg-stad/component-library/src/php/"
        }
    },
    "authors": [
        {
            "name": "Thor Brink",
            "email": "thor.brink@helsingborg.se"
        }
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "9.6",
        "helsingborg-stad/component-library": "dev-master"
    }
}
